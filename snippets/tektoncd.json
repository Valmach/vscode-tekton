{
  "Resource Limits and Requests": {
    "prefix": [
      "k8s-limits",
      "k8s-requests"
    ],
    "body": [
      "resources:",
      "  limits:",
      "    cpu: 4",
      "    memory: 6Gi",
      "  requests:",
      "    cpu: 2",
      "    memory: 4Gi"
    ],
    "description": "Defines the Kubernetes resource limits and requests"
  },
  "Tekton Task": {
    "prefix": ["task", "tekton-task"],
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: Task",
      "metadata:",
      "  name: ${1:build-app}",
      "spec:",
      "  steps:",
      "   - name: ${2:build-sources}",
      "     image: ${3|fedora,quay.io/buildah/stable|}",
      "     workingDir: \"/workspace/source/${4:\\${inputs.params.contextDir}}\"",
      "     command:",
      "      - ${5:echo}",
      "     args:",
      "      - 'hello world'",
      "     $LINE_COMMENT env:"
    ],
    "description": "Tekton task definition"
  },
  "Tekton TaskRun": {
    "prefix": ["taskrun"],
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: TaskRun",
      "metadata:",
      "  name: ${1:echo-hello-world-run}",
      "spec:",
      "  taskRef:",
      "    name: ${2: echo-hello-world}"
    ],
    "description": "Tekton task run"
  },
  "Pipeline Resource": {
    "prefix": ["pipeline-resource"],
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: PipelineResource",
      "metadata:",
      "  name: ${1:git-source}",
      "spec:",
      "  type: ${2|git,image,pullRequest,cluster,storage|}",
      "  params: ",
      "  $LINE_COMMENT Check https://github.com/tektoncd/pipeline/blob/master/docs/resources.md#pipelineresources for more applicable parameters"
    ],
    "description": "Tekton pipeline resource"
  },
  "Pipeline Resource Type": {
    "prefix": ["pipeline-resource-type"],
    "body": [
      "- name: ${1:app-source}",
      "  type: ${2|git,image,pullRequest,cluster,storage|}"
    ],
    "description": "Tekton pipeline resource type"
  },
  "Pipeline": {
    "prefix": ["pipeline"],
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: Pipeline",
      "metadata:",
      "  name: ${1:app-deploy}",
      "spec:",
      "$LINE_COMMENT Check https://github.com/tektoncd/pipeline/blob/master/docs/pipelines.md on how to define parameters",
      "$LINE_COMMENT  params: ",
      "  resources: ",
      "  ${2:pipeline-resource-type}",
      "  tasks: ",
      "   - name: ${3:taskName}",
      "     taskRef:",
      "       name: ${4:build-app}",
      "$LINE_COMMENT     pipeline-task-ref-input"
    ],
    "description": "Tekton pipeline run"
  },
  "Pipeline run": {
    "prefix": ["pipeline-run"],
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: PipelineRun",
      "metadata:",
      "  name: ${1:foo-run}",
      "spec:",
      "$LINE_COMMENT Check https://github.com/tektoncd/pipeline/blob/master/docs/pipelines.md on how to define parameters",
      "$LINE_COMMENT params: ",
      "  pipelineRef: ",
      "    name: ${2:foo}"
    ],
    "description": "Tekton pipeline run"
  },
  "Task Step": {
    "prefix": ["task-step"],
    "body": [
      "- name: ${2:echo2}",
      "  image: ${3|fedora,quay.io/buildah/stable|}",
      "  workingDir: \"/workspace/source/${4:\\${inputs.params.contextDir}}\"",
      "  command:",
      "   - ${5:echo2}",
      "  args:",
      "      - 'bye world'"
    ],
    "description": "Tekton Task Step"
  },
  "Param": {
    "prefix": ["parameter"],
    "body": ["- name: ${1:foo}", "  value: ${2:bar}"],
    "description": "A generic parameter used across any YAML that are key/value pair "
  },
  "Task Param": {
    "prefix": ["task-parameter", "pipeline-parameter"],
    "body": [
      "- name: ${1:foo}",
      "  description: ${3:Parameter description}",
      "  default: ${4:default value}"
    ],
    "description": "Tekton task parameter"
  },
  "Pipeline Task Reference": {
    "prefix": ["pipeline-task-ref"],
    "body": [
      "- name: ${1:taskName}",
      "  taskRef:",
      "    name: ${2:build-and-push}",
      "  runAfter:",
      "   - ${3:another-task-name}",
      "$LINE_COMMENT params:"
    ],
    "description": "Tekton pipeline task reference"
  },
  "Task Input": {
    "prefix": ["task-input"],
    "body": [
      "  inputs:",
      "   resources:",
      "    - name: ${1:source}",
      "      type: ${2|git,image,pullRequest,cluster,storage|}",
      "   params:",
      "   - name: ${3:foo}",
      "     description: ${4:Parameter description}",
      "     default: ${5:default value}",
      "  outputs:",
      "   resources:",
      "    - name: ${6:builtImage}",
      "      type: image"
    ],
    "description": "Tekton task inputs, parameters and outputs"
  },
  "Pipeline Task Reference Input": {
    "prefix": ["pipeline-task-ref-input"],
    "body": [
      "params:",
      " - name: ${1:name}",
      "   value: ${2:value}",
      "resources:",
      " inputs:",
      "  - name: ${3:source}",
      "    resource: ${4:app-source}",
      " outputs:",
      "  - name: ${5:builtImage}",
      "    resource: ${6:app-image}"
    ],
    "description": "Tekton pipeline task reference inputs, parameters and outputs"
  }
}
